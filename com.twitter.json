{
  "auth": {
    "type": "oauth2"
  },
  "types": [
    "online-account"
  ],
  "params": {},
  "global-name": "twitter",
  "triggers": {
    "source": {
      "args": [
        "text",
        "hashtags",
        "urls",
        "from",
        "inReplyTo",
        "yours"
      ],
      "schema": [
        "String",
        "Array(String)",
        "Array(String)",
        "String",
        "String",
        "Boolean"
      ],
      "doc": "trigger on any tweet from you or anyone you follow"
    },
    "direct_message": {
      "args": [
        "from",
        "message",
        "yours"
      ],
      "schema": [
        "String",
        "String",
        "Boolean"
      ],
      "doc": "trigger on any direct message you send or receive"
    }
  },
  "actions": {
    "sink": {
      "args": [
        "status"
      ],
      "schema": [
        "String"
      ],
      "doc": "post a tweet; use # to include a hashtag and @ to reply"
    },
    "send_direct_message": {
      "args": [
        "to",
        "message"
      ],
      "schema": [
        "String",
        "String"
      ],
      "doc": "send a direct message"
    }
  }
}
