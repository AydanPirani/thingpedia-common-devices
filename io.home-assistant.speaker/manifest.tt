abstract class @io.home-assistant.speaker
#_[thingpedia_name="Speaker"]
#_[thingpedia_description="Interface for Home Assistant's Speaker."]
#_[description="Interface for Home Assistant's Speaker."]
#[license="CC-0"]
#[license_gplcompatible=true]
#[subcategory="home"]
{
  monitorable query state(out state : Enum(on,off))
  #_[canonical="switch state"]
  #_[confirmation="the state of $__device"]
  #_[formatted=["It is ${state}"]];

  action set_power(in req power: Enum(on,off) #_[prompt="Do you want to turn it on or off?"] #_[canonical="power"])
  #_[canonical="set power on $__device"]
  #_[confirmation="turn ${power} $__device"]
  #[confirm=true];

  action volume_up()
  #_[canonical="increase speaker volume"]
  #_[confirmation="increase $__device's volume"]
  #[confirm=true];

  action volume_down()
  #_[canonical="decrease speaker volume"]
  #_[confirmation="decrease $__device's volume"]
  #[confirm=true];

  action volume_mute()
  #_[canonical="mute speaker"]
  #_[confirmation="mute $__device"]
  #[confirm=true];

  action volume_unmute()
  #_[canonical="unmute speaker"]
  #_[confirmation="unmute $__device"]
  #[confirm=true];

  action volume_set(in req volume: Number #_[prompt="From 0 to 100, what volume do you want to set?"] #_[canonical="volume"])
  #_[canonical="set volume for speaker"]
  #_[confirmation="set $__device's volume to $volume"]
  #[confirm=true];
}