dataset @io.home-assistant.battery-binary-sensor {
  program := now => @io.home-assistant.battery-binary-sensor.state() => notify
  #_[utterances="what is the state of my battery sensor?",
                "what is my battery sensor showing?",
                "what does my battery sensor say?",
                "is my battery sensor low?",
                "check if my battery sensor is low",
                "is my battery sensor too low?",
                "check if my battery sensor is too low",
                "is my battery sensor normal?",
                "check if my battery sensor is normal",
                "check if my battery sensor is low or normal",
                "check if my battery sensor is too low or normal"]];

  query := @io.home-assistant.battery-binary-sensor.state()
  #_[utterances="the state of my battery sensor",
                "if my battery sensor is low or normal",
                "whether my battery sensor is low or normal",
                "if my battery sensor is too low or normal",
                "whether my battery sensor is too low or normal"]];

  stream := monitor @battery-binary-sensor.state()
  #_[utterances=["when the state of my battery sensor changes",
                 "when my battery sensor changes state",
                 "when my battery sensor changes"]];

  stream (p_state : Enum(low, normal)) := edge( @io.home-assistant.battery-binary-sensor.state()) on (state == p_state)
  #_[utterances="when my battery sensor becomes ${p_state}",
                "when my battery sensor is ${p_state}",
                "when my battery sensor turns ${p_state}",
                "when my battery sensor changes to ${p_state}",
                "if my battery sensor becomes ${p_state}",
                "if my battery sensor is ${p_state}",
                "if my battery sensor turns ${p_state}",
                "if my battery sensor changes to ${p_state}"]];

  stream :=  edge( @io.home-assistant.battery-binary-sensor.state()) on (state == enum(low))
  #_[utterances="when my battery sensor becomes low",
                "when my battery sensor turns low",
                "when my battery sensor changes to low",
                "if my battery sensor becomes low",
                "if my battery sensor turns low",
                "if my battery sensor changes to low",
                "when my battery sensor becomes too low",
                "when my battery sensor turns too low",
                "when my battery sensor changes to too low",
                "if my battery sensor becomes too low",
                "if my battery sensor turns too low",
                "if my battery sensor changes to too low",
                "when my battery sensor becomes not normal",
                "when my battery sensor turns not normal",
                "when my battery sensor changes to not normal",
                "if my battery sensor becomes not normal",
                "if my battery sensor turns not normal",
                "if my battery sensor changes to not normal"]];

  stream :=  edge( @io.home-assistant.battery-binary-sensor.state()) on (state == enum(normal))
  #_[utterances="when my battery sensor becomes normal",
                "when my battery sensor turns normal",
                "when my battery sensor changes to normal",
                "if my battery sensor becomes normal",
                "if my battery sensor turns normal",
                "if my battery sensor changes to normal",
                "when my battery sensor becomes not low",
                "when my battery sensor turns not low",
                "when my battery sensor changes to not low",
                "if my battery sensor becomes not low",
                "if my battery sensor turns not low",
                "if my battery sensor changes to not low",
                "when my battery sensor becomes not too low",
                "when my battery sensor turns not too low",
                "when my battery sensor changes to not too low",
                "if my battery sensor becomes not too low",
                "if my battery sensor turns not too low",
                "if my battery sensor changes to not too low"]];
}