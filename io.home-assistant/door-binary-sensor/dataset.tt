dataset @io.home-assistant.door-binary-sensor {
  program := now => @io.home-assistant.door-binary-sensor.state() => notify
  #_[utterances="what is the state of my door sensor?",
                "what is my door sensor showing?",
                "what does my door sensor say?",
                "is my door sensor open?",
                "check if my door sensor is open",
                "is my door sensor closed?",
                "check if my door sensor is closed",
                "check if my door sensor is open or closed"]];

  query := @io.home-assistant.door-binary-sensor.state()
  #_[utterances="the state of my door sensor",
                "if my door sensor is open or closed",
                "whether my door sensor is open or closed"]];

  stream := monitor @door-binary-sensor.state()
  #_[utterances=["when the state of my door sensor changes",
                 "when my door sensor changes state",
                 "when my door sensor changes"]];

  stream (p_state : Enum(open, closed)) := edge( @io.home-assistant.door-binary-sensor.state()) on (state == p_state)
  #_[utterances="when my door sensor becomes ${p_state}",
                "when my door sensor is ${p_state}",
                "when my door sensor turns ${p_state}",
                "when my door sensor changes to ${p_state}",
                "if my door sensor becomes ${p_state}",
                "if my door sensor is ${p_state}",
                "if my door sensor turns ${p_state}",
                "if my door sensor changes to ${p_state}"]];

  stream :=  edge( @io.home-assistant.door-binary-sensor.state()) on (state == enum(open))
  #_[utterances="when my door sensor becomes open",
                "when my door sensor turns open",
                "when my door sensor changes to open",
                "if my door sensor becomes open",
                "if my door sensor turns open",
                "if my door sensor changes to open",
                "when my door sensor becomes not closed",
                "when my door sensor turns not closed",
                "when my door sensor changes to not closed",
                "if my door sensor becomes not closed",
                "if my door sensor turns not closed",
                "if my door sensor changes to not closed"]];

  stream :=  edge( @io.home-assistant.door-binary-sensor.state()) on (state == enum(closed))
  #_[utterances="when my door sensor becomes closed",
                "when my door sensor turns closed",
                "when my door sensor changes to closed",
                "if my door sensor becomes closed",
                "if my door sensor turns closed",
                "if my door sensor changes to closed",
                "when my door sensor becomes not open",
                "when my door sensor turns not open",
                "when my door sensor changes to not open",
                "if my door sensor becomes not open",
                "if my door sensor turns not open",
                "if my door sensor changes to not open"]];
}