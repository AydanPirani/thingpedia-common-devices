dataset @io.home-assistant.heat-binary-sensor {
  program := now => @io.home-assistant.heat-binary-sensor.state() => notify
  #_[utterances="what is the state of my heat sensor?",
                "what is my heat sensor showing?",
                "what does my heat sensor say?",
                "is my heat sensor hot?",
                "check if my heat sensor is hot",
                "is my heat sensor too hot?",
                "check if my heat sensor is too hot",
                "is my heat sensor warm?",
                "check if my heat sensor is warm",
                "is my heat sensor too warm?",
                "check if my heat sensor is too warm",
                "is my heat sensor normal?",
                "check if my heat sensor is normal",
                "check if my heat sensor is hot or normal",
                "check if my heat sensor is too hot or normal",
                "check if my heat sensor is warm or normal",
                "check if my heat sensor is too warm or normal"]];

  query := @io.home-assistant.heat-binary-sensor.state()
  #_[utterances="the state of my heat sensor",
                "if my heat sensor is hot or normal",
                "whether my heat sensor is hot or normal",
                "if my heat sensor is too hot or normal",
                "whether my heat sensor is too hot or normal",
                "if my heat sensor is warm or normal",
                "whether my heat sensor is warm or normal",
                "if my heat sensor is too warm or normal",
                "whether my heat sensor is too warm or normal"]];

  stream := monitor @heat-binary-sensor.state()
  #_[utterances=["when the state of my heat sensor changes",
                 "when my heat sensor changes state",
                 "when my heat sensor changes"]];

  stream (p_state : Enum(hot, normal)) := edge( @io.home-assistant.heat-binary-sensor.state()) on (state == p_state)
  #_[utterances="when my heat sensor becomes ${p_state}",
                "when my heat sensor is ${p_state}",
                "when my heat sensor turns ${p_state}",
                "when my heat sensor changes to ${p_state}",
                "if my heat sensor becomes ${p_state}",
                "if my heat sensor is ${p_state}",
                "if my heat sensor turns ${p_state}",
                "if my heat sensor changes to ${p_state}"]];

  stream :=  edge( @io.home-assistant.heat-binary-sensor.state()) on (state == enum(hot))
  #_[utterances="when my heat sensor becomes hot",
                "when my heat sensor turns hot",
                "when my heat sensor changes to hot",
                "if my heat sensor becomes hot",
                "if my heat sensor turns hot",
                "if my heat sensor changes to hot",
                "when my heat sensor becomes too hot",
                "when my heat sensor turns too hot",
                "when my heat sensor changes to too hot",
                "if my heat sensor becomes too hot",
                "if my heat sensor turns too hot",
                "if my heat sensor changes to too hot",
                "when my heat sensor becomes warm",
                "when my heat sensor turns warm",
                "when my heat sensor changes to warm",
                "if my heat sensor becomes warm",
                "if my heat sensor turns warm",
                "if my heat sensor changes to warm",
                "when my heat sensor becomes too warm",
                "when my heat sensor turns too warm",
                "when my heat sensor changes to too warm",
                "if my heat sensor becomes too warm",
                "if my heat sensor turns too warm",
                "if my heat sensor changes to too warm",
                "when my heat sensor becomes not normal",
                "when my heat sensor turns not normal",
                "when my heat sensor changes to not normal",
                "if my heat sensor becomes not normal",
                "if my heat sensor turns not normal",
                "if my heat sensor changes to not normal"]];

  stream :=  edge( @io.home-assistant.heat-binary-sensor.state()) on (state == enum(normal))
  #_[utterances="when my heat sensor becomes normal",
                "when my heat sensor turns normal",
                "when my heat sensor changes to normal",
                "if my heat sensor becomes normal",
                "if my heat sensor turns normal",
                "if my heat sensor changes to normal",
                "when my heat sensor becomes not hot",
                "when my heat sensor turns not hot",
                "when my heat sensor changes to not hot",
                "if my heat sensor becomes not hot",
                "if my heat sensor turns not hot",
                "if my heat sensor changes to not hot",
                "when my heat sensor becomes not too hot",
                "when my heat sensor turns not too hot",
                "when my heat sensor changes to not too hot",
                "if my heat sensor becomes not too hot",
                "if my heat sensor turns not too hot",
                "if my heat sensor changes to not too hot",
                "when my heat sensor becomes not warm",
                "when my heat sensor turns not warm",
                "when my heat sensor changes to not warm",
                "if my heat sensor becomes not warm",
                "if my heat sensor turns not warm",
                "if my heat sensor changes to not warm",
                "when my heat sensor becomes not too warm",
                "when my heat sensor turns not too warm",
                "when my heat sensor changes to not too warm",
                "if my heat sensor becomes not too warm",
                "if my heat sensor turns not too warm",
                "if my heat sensor changes to not too warm"]];
}