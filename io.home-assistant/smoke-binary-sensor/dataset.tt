dataset @io.home-assistant.smoke-binary-sensor {
  program := now => @io.home-assistant.smoke-binary-sensor.state() => notify
  #_[utterances="what is the state of my smoke sensor?",
                "what is my smoke sensor showing?",
                "what does my smoke sensor say?",
                "is my smoke sensor detecting smoke?",
                "check if my smoke sensor is detecting smoke",
                "is my smoke sensor detecting any smoke?",
                "check if my smoke sensor is detecting any smoke",
                "is my smoke sensor not detecting smoke?",
                "check if my smoke sensor is not detecting smoke",
                "is my smoke sensor not detecting any smoke?",
                "check if my smoke sensor is not detecting any smoke",
                "check if my smoke sensor is detecting smoke or not detecting smoke",
                "check if my smoke sensor is detecting smoke or not detecting any smoke",
                "check if my smoke sensor is detecting any smoke or not detecting smoke",
                "check if my smoke sensor is detecting any smoke or not detecting any smoke"]];

  query := @io.home-assistant.smoke-binary-sensor.state()
  #_[utterances="the state of my smoke sensor",
                "if my smoke sensor is detecting smoke or not detecting smoke",
                "whether my smoke sensor is detecting smoke or not detecting smoke",
                "if my smoke sensor is detecting smoke or not detecting any smoke",
                "whether my smoke sensor is detecting smoke or not detecting any smoke",
                "if my smoke sensor is detecting any smoke or not detecting smoke",
                "whether my smoke sensor is detecting any smoke or not detecting smoke",
                "if my smoke sensor is detecting any smoke or not detecting any smoke",
                "whether my smoke sensor is detecting any smoke or not detecting any smoke"]];

  stream := monitor @smoke-binary-sensor.state()
  #_[utterances=["when the state of my smoke sensor changes",
                 "when my smoke sensor changes state",
                 "when my smoke sensor changes"]];

  stream (p_state : Enum(detecting_smoke, not_detecting_smoke)) := edge( @io.home-assistant.smoke-binary-sensor.state()) on (state == p_state)
  #_[utterances="when my smoke sensor becomes ${p_state}",
                "when my smoke sensor is ${p_state}",
                "when my smoke sensor turns ${p_state}",
                "when my smoke sensor changes to ${p_state}",
                "if my smoke sensor becomes ${p_state}",
                "if my smoke sensor is ${p_state}",
                "if my smoke sensor turns ${p_state}",
                "if my smoke sensor changes to ${p_state}"]];

  stream :=  edge( @io.home-assistant.smoke-binary-sensor.state()) on (state == enum(detecting_smoke))
  #_[utterances="when my smoke sensor becomes detecting smoke",
                "when my smoke sensor turns detecting smoke",
                "when my smoke sensor changes to detecting smoke",
                "if my smoke sensor becomes detecting smoke",
                "if my smoke sensor turns detecting smoke",
                "if my smoke sensor changes to detecting smoke",
                "when my smoke sensor becomes detecting any smoke",
                "when my smoke sensor turns detecting any smoke",
                "when my smoke sensor changes to detecting any smoke",
                "if my smoke sensor becomes detecting any smoke",
                "if my smoke sensor turns detecting any smoke",
                "if my smoke sensor changes to detecting any smoke"]];

  stream :=  edge( @io.home-assistant.smoke-binary-sensor.state()) on (state == enum(not_detecting_smoke))
  #_[utterances="when my smoke sensor becomes not detecting smoke",
                "when my smoke sensor turns not detecting smoke",
                "when my smoke sensor changes to not detecting smoke",
                "if my smoke sensor becomes not detecting smoke",
                "if my smoke sensor turns not detecting smoke",
                "if my smoke sensor changes to not detecting smoke",
                "when my smoke sensor becomes not detecting any smoke",
                "when my smoke sensor turns not detecting any smoke",
                "when my smoke sensor changes to not detecting any smoke",
                "if my smoke sensor becomes not detecting any smoke",
                "if my smoke sensor turns not detecting any smoke",
                "if my smoke sensor changes to not detecting any smoke",
                "when my smoke sensor becomes not detecting smoke",
                "when my smoke sensor turns not detecting smoke",
                "when my smoke sensor changes to not detecting smoke",
                "if my smoke sensor becomes not detecting smoke",
                "if my smoke sensor turns not detecting smoke",
                "if my smoke sensor changes to not detecting smoke",
                "when my smoke sensor becomes not detecting any smoke",
                "when my smoke sensor turns not detecting any smoke",
                "when my smoke sensor changes to not detecting any smoke",
                "if my smoke sensor becomes not detecting any smoke",
                "if my smoke sensor turns not detecting any smoke",
                "if my smoke sensor changes to not detecting any smoke"]];
}