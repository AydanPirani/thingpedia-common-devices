{
    "module_type": "org.thingpedia.v1",
    "params": {
        "url": [
            "Feed URL",
            "text"
        ]
    },
    "category": "online",
    "subcategory": "media",
    "types": [],
    "child_types": [],
    "auth": {
        "type": "none"
    },
    "triggers": {},
    "actions": {},
    "queries": {
        "get_post": {
            "args": [
                {
                    "name": "title",
                    "type": "String",
                    "question": "",
                    "is_input": false,
                    "required": false
                },
                {
                    "name": "link",
                    "type": "URL",
                    "question": "",
                    "is_input": false,
                    "required": false
                }
            ],
            "doc": "Poll for new posts (every 3 hours)",
            "confirmation": "something is posted on the RSS feed",
            "confirmation_remote": "",
            "canonical": "new post on rss",
            "formatted": [
                {
                    "type": "rdl",
                    "webCallback": "${link}",
                    "displayTitle": "${title}"
                }
            ],
            "poll_interval": 10800000
        }
    },
    "examples": [
        {
            "utterance": "when there is a new post on rss feed",
            "program": "let stream x := monitor (@org.thingpedia.rss.get_post());"
        },
        {
            "utterance": "latest posts on an atom feed",
            "program": "let table x := @org.thingpedia.rss.get_post();"
        },
        {
            "utterance": "latest posts on an rss feed",
            "program": "let table x := @org.thingpedia.rss.get_post();"
        },
        {
            "utterance": "when they publish something on the rss feed",
            "program": "let stream x := monitor (@org.thingpedia.rss.get_post());"
        }
    ]
}
